---
import MainLayout from '@/layouts/main.astro';
---

<MainLayout title="Kontakt" description="Kontaktujte nás a navštívte náš útulok">
	<section class="mx-auto max-w-screen-2xl px-4 py-16">
		<div class="space-y-8">
			<div class="text-center space-y-4">
				<h1 class="text-4xl md:text-5xl font-bold">Kontakt</h1>
				<p class="text-xl text-muted-foreground max-w-2xl mx-auto">
					Sme tu pre vás a pre psíkov
				</p>
			</div>

			<div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
				<div class="space-y-6">
					<div>
						<h2 class="text-2xl font-semibold mb-4">Adresa</h2>
						<p class="text-muted-foreground">
							Útulok pre psov<br>
							Ulica 123<br>
							123 45 Mesto<br>
							Slovensko
						</p>
					</div>

					<div>
						<h2 class="text-2xl font-semibold mb-4">Kontaktné údaje</h2>
						<p class="text-muted-foreground">
							<strong>Telefón:</strong> +421 XXX XXX XXX<br>
							<strong>Email:</strong> info@dogsheltter.sk<br>
							<strong>Facebook:</strong> @dogsheltter
						</p>
					</div>

					<div>
						<h2 class="text-2xl font-semibold mb-4">Otváracie hodiny</h2>
						<p class="text-muted-foreground">
							<strong>Pondelok - Piatok:</strong> 9:00 - 17:00<br>
							<strong>Sobota:</strong> 10:00 - 14:00<br>
							<strong>Nedeľa:</strong> Zatvorené
						</p>
					</div>
				</div>

				<div class="space-y-6">
					<div>
						<h2 class="text-2xl font-semibold mb-4">Napíšte nám</h2>
						<form class="space-y-4">
							<div>
								<label for="name" class="block text-sm font-medium mb-2">Meno</label>
								<input
									type="text"
									id="name"
									name="name"
									class="w-full px-4 py-2 rounded-md border border-input bg-background"
									required
								/>
							</div>
							<div>
								<label for="email" class="block text-sm font-medium mb-2">Email</label>
								<input
									type="email"
									id="email"
									name="email"
									class="w-full px-4 py-2 rounded-md border border-input bg-background"
									required
								/>
							</div>
							<div>
								<label for="message" class="block text-sm font-medium mb-2">Správa</label>
								<textarea
									id="message"
									name="message"
									rows="5"
									class="w-full px-4 py-2 rounded-md border border-input bg-background"
									required
								></textarea>
							</div>
							<button
								type="submit"
								class="w-full px-4 py-2 rounded-md bg-primary text-primary-foreground hover:bg-primary/90 transition-colors"
							>
								Odoslať správu
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
</MainLayout>
