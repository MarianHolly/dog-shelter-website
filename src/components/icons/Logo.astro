---
import { siteConfig } from '@/config/site.config';
---

<a href="/" class="flex items-center space-x-3 font-bold text-lg">
  <img
    src="/logo-utulok.png"
    alt={`${siteConfig.name} logo`}
    class="h-10 w-auto"
  />
  <span class="hidden sm:inline-block">{siteConfig.name}</span>
</a>

<style>
  a {
    transition: opacity 0.2s ease-in-out;
  }

  a:hover {
    opacity: 0.8;
  }
</style>
